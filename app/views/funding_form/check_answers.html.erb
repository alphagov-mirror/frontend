<% content_for :title do %><%= t('funding_form.check_your_answers.title') %> - GOV.UK<% end %>
<% content_for :extra_headers do %>
  <meta name="description" content="<%= t('funding_form.check_your_answers.title') %>" />
<% end %>

<div class="govuk-width-container">
  <main class="govuk-main-wrapper" id="main-content" role="main">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <%= form_tag do %>
        <%= render "govuk_publishing_components/components/title", {
          title: t('funding_form.check_your_answers.title'),
        } %>
        <%= render "govuk_publishing_components/components/summary_list", {
          title: t('funding_form.check_your_answers.section_1.heading'),
          items: [
            {
              field: t('funding_form.check_your_answers.section_1.full_name'),
              value: session["full_name"],
              edit: {
                href: "who-should-we-contact-about-the-grant-award",
              }
            },
            {
              field: t('funding_form.check_your_answers.section_1.job_title'),
              value: session["job_title"],
              edit: {
                href: "who-should-we-contact-about-the-grant-award",
              },
            },
            {
              field: t('funding_form.check_your_answers.section_1.email_address'),
              value: session["email_address"],
              edit: {
                href: "who-should-we-contact-about-the-grant-award",
              },
            },
            {
              field: t('funding_form.check_your_answers.section_1.telephone_number'),
              value: session["telephone_number"],
              edit: {
                href: "who-should-we-contact-about-the-grant-award",
              },
            },

          ]
        } %>

        <%= render "govuk_publishing_components/components/summary_list", {
          title: t('funding_form.check_your_answers.section_2.heading'),
          items: [
            {
              field: t('funding_form.check_your_answers.section_2.organisation_type'),
              value: session[:organisation_type],
              edit: {
                href: "organisation-type",
              }
            },
            {
              field: t('funding_form.check_your_answers.section_2.organisation_name'),
              value: session["organisation_name"],
              edit: {
                href: "organisation-details"
              },
            },
            {
              field: t('funding_form.check_your_answers.section_2.organisation_address'),
              value: session["address_line_1"]+' '+ session["address_line_2"].to_s + ' ' + session["town_or_city"].to_s + ' ' + session["address_county"].to_s  + ' ' + session["address_postcode"].to_s ,
              edit: {
                href: "organisation-details"
              },
            },
            {
              field: t('funding_form.check_your_answers.section_2.company_house_number'),
              value: session["company_house_or_charity_commission_number"],
              edit: {
                href: "organisation-details"
              },
            },

          ]
        } %>

        <%= render "govuk_publishing_components/components/summary_list", {
          title: t('funding_form.check_your_answers.section_3.heading'),
          items: [
            {
              field: t('funding_form.check_your_answers.section_3.grant_agreement_number'),
              value: session["grant_agreement_number"],
              edit: {
                href: "do-you-have-a-grant-agreement-number",
              }
            },
            {
              field: t('funding_form.check_your_answers.section_3.programme'),
              value: session["programme"],
              edit: {
                href: "what-programme-do-you-receive-funding-from"
              },
            },
            {
              field: t('funding_form.check_your_answers.section_3.project_name'),
              value: session["project_name"],
              edit: {
                href: "project-details"
              },
            },
            {
              field: t('funding_form.check_your_answers.section_3.total_amount_awarded'),
              value: session["total_amount_awarded"],
              edit: {
                href: "project-details"
              },
            },
            {
              field: t('funding_form.check_your_answers.section_3.award_start_date'),
              value: session["total_amount_awarded"],
              edit: {
                href: "project-details"
              },
            },
            {
              field: t('funding_form.check_your_answers.section_3.award_end_date'),
              value: session["total_amount_awarded"],
              edit: {
                href: "project-details"
              },
            },
            {
              field: t('funding_form.check_your_answers.section_3.non_uk_partners'),
              value: session["non_uk_partners"],
              edit: {
                href: "does-the-project-have-partners-or-participants-outside-the-uk"
              },
            },

          ]
        } %>

        <%= render "govuk_publishing_components/components/heading", {
          text: t('funding_form.check_your_answers.section_4.heading')
        } %>
        <%= render "govuk_publishing_components/components/textarea", {
          label: {
            text: t('funding_form.check_your_answers.section_4.description')
          },
          name: "additonal_comments"
        } %>

        <%= render "govuk_publishing_components/components/heading", {
          text: t('funding_form.check_your_answers.section_5.heading')
        } %>
        <p><%= t('funding_form.check_your_answers.section_5.description') %></p>

          <%= render "govuk_publishing_components/components/button", text: "Accept and send", margin_bottom: true %>

          <% end %>
        </div>
      </div>
    </main>
</div>
