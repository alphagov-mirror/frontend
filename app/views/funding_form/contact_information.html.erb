<% content_for :title do %><%= t('funding_form.contact_information.title') %> - GOV.UK<% end %>
<% content_for :extra_headers do %>
  <meta name="description" content="<%= t('funding_form.organisation_type.title') %>" />
<% end %>

<div class="govuk-width-container">
  <main class="govuk-main-wrapper" id="main-content" role="main">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <%= form_tag do %>
        <%= render "govuk_publishing_components/components/title", {
          title: t('funding_form.contact_information.title'),
        } %>
        <p class="govuk-body"><%= t('funding_form.contact_information.description') %></p>
        <%= render "govuk_publishing_components/components/input", {
          label: {
            text: t('funding_form.contact_information.full_name.label'),
            bold: true
          },
          name: t('funding_form.contact_information.full_name.label')
        } %>
        <%= render "govuk_publishing_components/components/input", {
          label: {
            text:t('funding_form.contact_information.job_title.label'),
            bold: true
          },
          name: t('funding_form.contact_information.jon_title.label')
        } %>
        <%= render "govuk_publishing_components/components/input", {
          label: {
            text: t('funding_form.contact_information.email_address.label'),
            bold: true
          },
          name: t('funding_form.contact_information.email_address.label'),
          hint: t('funding_form.contact_information.email_address.hint')
        } %>
        <%= render "govuk_publishing_components/components/input", {
          label: {
            text: t('funding_form.contact_information.telephone_number.label'),
            bold: true
          },
          name: t('funding_form.contact_information.telephone_number.label'),
          width: 20
        } %>


          <%= render "govuk_publishing_components/components/button", text: "Next", margin_bottom: true %>

          <% end %>
        </div>
      </div>
    </main>
</div>
